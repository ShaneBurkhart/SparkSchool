extends ../layouts/landing-page-no-header
include ../landing-pages/mixins

block variables
   - var title = 'Build A Small Version Of Twitter!';

block no_hero

block content
    block extras
    .section.dark-blue.signup-section#sign-up
        .container
            .description
                h2.bold Build A Small Version Of Twitter!

                p
                    | In this 7-day course, you will build a
                    b &nbsp;small version of Twitter from scratch.

                p.bold By the end of the course, you will know how to:

                ul
                    li Code a complex web server in JavaScript using Node.js
                    li Read and write Tweets to a database using SQL
                    li Build and style web pages with HTML and CSS
                    li Deploy your app to the web with Heroku
                    li And a lot more!

                br
                br

                p
                    b Facebook Support Group
                    |  - When you purchase, you will be invited to a Facebook group for the course. If you get stuck, I'll be there to help :)

                p
                    b 100% Money Back Guarantee
                    |  - I'm so confident in this course that if you aren't completely satisfied, I will refund your entire purchase!

                blockquote
                    p This is my favorite course because it's where I see students make a noticeable transition towards becoming a software developer.

            .graphic
                form.signup-form#paypal-form(action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top")
                    h3
                        | Get the course for
                        b &nbsp;$29!
                    p.light We'll send the course to your PayPal email.
                    input(type="hidden" name="cmd" value="_s-xclick")
                    input(type="hidden" name="hosted_button_id" value="S7VF865JX84QU")
                    input(type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!")
                    img(alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1")


                form.signup-form#payment-form(action='/twitter-clone-course/purchase' method='POST')
                    h3.text-center.margin-small Or pay with a credit card!

                    +error_notice()

                    input(type='hidden' name='origin' value='/twitter-clone-course-checkout')

                    +payment_cc_fields()

                    button.yellow Buy the course for $29!

                +payment_form_scripts()
