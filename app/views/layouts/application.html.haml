    - unless current_page? root_path
      %header
        = render 'layouts/navigation'
    - else
      = render 'layouts/mega_header'
    %main{:role => "main", class: current_page?(root_path) ? "" : "full-screen navbar-offset"}
      - unless current_page? root_path
        = render 'layouts/messages'
      = yield
      #push
    %footer{ class: current_page?(root_path) ? "dark" : "" }
      .container
        .row
          .col-md-2
            %p.heading Spark School
            %p= link_to "Courses", courses_path
            %p= link_to "Login", courses_path
            %p= link_to "Create Account", courses_path
          .col-md-2
            %p.heading Learn More
            %p= link_to "Blog", blogs_path
            %p= link_to "Twitter", "https://twitter.com/SparkSchoolCo"
          .col-md-2
            %p.heading The Team
            %p= link_to "Shane Burkhart", "http://shaneburkhart.me"
            %p= link_to "Ryan Endacott", "https://github.com/ryan-endacott"
          .col-md-6
