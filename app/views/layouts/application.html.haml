!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Spark Academy'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Spark Academy'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    - unless current_page? root_path
      %header
        = render 'layouts/navigation'
    %main{:role => "main", class: current_page?(root_path) ? "" : "navbar-offset"}
      = render 'layouts/messages'
      = yield
      %footer
        .container
          .row
            .col-md-6
              %p Created by Shane Burkhart and Ryan Endacott
            .col-md-6.text-right
              %p
                Follow us on
                = link_to "Twitter", "https://twitter.com/SparkSchoolCo"


    - if Rails.env.production?
      :javascript
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-47434036-1', 'sparkschool.co');
          ga('send', 'pageview');


