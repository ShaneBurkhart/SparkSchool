= simple_form_for @blog do |f|
  .row
    .col-md-7
      = f.input :title, input_html: { class: "form-control" }
  .row
    .col-md-4
      = f.input :tag, input_html: { class: "form-control" }
  .row
    .col-md-8
      = f.input :body, input_html: { class: "form-control", rows: "20" }
  %br
  .row
    .col-md-12
      = f.button :submit, class: "btn-default"
