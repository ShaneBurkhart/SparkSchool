= simple_form_for @course do |f|
  .row
    .col-md-8
      = f.input :name, input_html: {class: "form-control"}

  .row
    .col-md-5
      = f.input :tag, input_html: {class: "form-control"}
  .row
    .col-md-8
      = f.input :description, input_html: {class: "form-control", rows: 10}
  %br
  = f.button :submit, class: "btn"

