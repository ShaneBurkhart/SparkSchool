    .col-md-6
      %h2 Preorder.
      .text-center
        %p.price $129
      = simple_form_for @preorder, url: preorder_path do |f|
        %h3
          %i.glyphicon.glyphicon-user
          General Information
        .row.form-group
          .col-md-6
            = f.input :first_name, input_html: { class: "form-control", placeholder: "First" }
          .col-md-6
            = f.input :last_name, input_html: { class: "form-control", placeholder: "First" }
        .row.form-group
          .col-md-12
            = f.input :email, input_html: { class: "form-control", placeholder: "First" }
        %h3
          %i.glyphicon.glyphicon-tags
          Shipping Information
        .row.form-group
          .col-md-12
            = f.input :address, input_html: { class: "form-control", placeholder: "First" }
        .row.form-group
          .col-md-4
            = f.input :city, input_html: { class: "form-control", placeholder: "First" }
          .col-md-4
            = f.input :state, input_html: { class: "form-control", placeholder: "First" }
          .col-md-4
            = f.input :zipcode, input_html: { class: "form-control", placeholder: "First" }
        %h3
          %i.glyphicon.glyphicon-credit-card
          Credit Card Information
        .row.form-group
          .col-md-12
            = f.input :address, input_html: { class: "form-control", placeholder: "First" }
        .row.form-group
          .col-md-6
            = f.input :city, input_html: { class: "form-control", placeholder: "First" }
          .col-md-6
            = f.input :state, input_html: { class: "form-control", placeholder: "First" }
        %br
        = button_tag type: :submit, class: "btn btn-info btn-lg btn-block" do
          %i.glyphicon.glyphicon-shopping-cart
          Preorder Your Kit
